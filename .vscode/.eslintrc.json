{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],           // exige ponto e vírgula
    "quotes": ["error", "double"],         // exige aspas duplas
    "no-unused-vars": "warn",              // avisa sobre variáveis não usadas
    "no-console": "off",                   // permite usar console.log()
    "eqeqeq": ["error", "always"],         // força usar === ao invés de ==
    "indent": ["error", 2]                 // exige indentação de 2 espaços
  }
}
